{% extends "admin/base.html.twig" %}

{% block title %}Modifier un commentaire{% endblock %}

{% block body %}

    

    <div class="container-fluid mt-5">

        <h1 class="my-3 p-3 text-center">Modification du commentaire n°{{ comment.id }}</h1>

        <div class="row mt-5">

            <div class="col-8 offset-2 px-5 alert alert-info">
            
                <p>Annonce concernée: {{comment.ad.title}}</p>
                <p>Auteur: {{comment.ad.author.fullname}}</p>
                <p>Date de création: {{comment.createdAt|date('d/m/Y H:i')}}</p>
                <p>Note: {{comment.rating}}</p>
            </div>
            <div class="col-8 offset-2 px-5">

                {{form_start(form)}}

                    {{form_widget(form)}}
                    <button class="btn btn-success"><i class="fas fa-chack"></i>Enregistrer les modifications</button>

                {{form_end(form)}}
            
            
            
            </div>
        </div>
        
    </div>


{% endblock %}
